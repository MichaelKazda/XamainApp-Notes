<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NotesApp.Templates.AddNoteTemp">
    <ContentPage.Resources>
        <ResourceDictionary>
            <ControlTemplate x:Key="AddNoteTemp">
                <StackLayout>
                    <Label Text="Title (max 10 chars)" TextColor="Black"></Label>
                    <Entry Text="Title of the note" MaxLength="10"></Entry>
                    <Label Text="Note" TextColor="Black"></Label>
                    <Entry Text="Your note"></Entry>
                </StackLayout>
            </ControlTemplate>
        </ResourceDictionary>
    </ContentPage.Resources>
</ContentPage>