                </Frame>
            </StackLayout>
        </ScrollView>

        <StackLayout VerticalOptions="End" >
            <Button x:Name="addNote" Margin="20,5" VerticalOptions="Center" Text="Add new note" BackgroundColor="CadetBlue" TextColor="white" Clicked="addNotePopup_Clicked"/>
        </StackLayout>
    </StackLayout>
</ContentPage>
